# Environment variables for EduVerse

# Database URL for Drizzle ORM and PostgreSQL connection
# Example: postgresql://user:password@host:port/database
DATABASE_URL=""

# Secret for session management (used by Express-session)
# Generate a strong, random string
SESSION_SECRET=""

# Replit-specific environment variables (if deploying on Replit)
# ISSUER_URL is the OIDC issuer URL, usually https://replit.com/oidc
ISSUER_URL="https://replit.com/oidc"
# REPL_ID is the ID of your Replit project
REPL_ID=""
# REPLIT_DOMAINS is a comma-separated list of domains your Repl is served on
# Example: my-repl.replit.app,localhost:3000
REPLIT_DOMAINS=""

# Port for the Express server to listen on
PORT="5000"

# API Key for OpenAI services
OPENAI_API_KEY=""

# API Key for Google Gemini services
GEMINI_API_KEY=""
