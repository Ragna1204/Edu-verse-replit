# Environment variables for EduVerse

# Database URL for Drizzle ORM and PostgreSQL connection
# For development, you can use a local PostgreSQL instance or a cloud database
# DATABASE_URL="postgresql://eduverse_admin:edverse123@localhost:5432/eduverse_db"
DATABASE_URL="file:dev.sqlite"

# Secret for session management (used by Express-session)
# Generate a strong, random string
SESSION_SECRET="your-super-secret-session-key-change-in-production"

# Replit-specific environment variables (if deploying on Replit)
# ISSUER_URL is the OIDC issuer URL, usually https://replit.com/oidc
ISSUER_URL="https://replit.com/oidc"
# REPL_ID is the ID of your Replit project
REPL_ID="demo-repl-id"
# REPLIT_DOMAINS is a comma-separated list of domains your Repl is served on
# Example: my-repl.replit.app,localhost:3000
REPLIT_DOMAINS="localhost:5174,localhost:5000"

# Port for the Express server to listen on
PORT="5001"

# API Key for OpenAI services (optional for development)
OPENAI_API_KEY=""

# API Key for Google Gemini services (optional for development)
GEMINI_API_KEY=""

# Firebase Configuration
# Replace these with your actual Firebase project credentials
# You can get these from the Firebase Console > Project Settings > General > Your apps
VITE_FIREBASE_API_KEY="demo-api-key-for-dev"
VITE_FIREBASE_AUTH_DOMAIN="demo-project.firebaseapp.com"
VITE_FIREBASE_PROJECT_ID="demo-project"
VITE_FIREBASE_STORAGE_BUCKET="demo-project.appspot.com"
VITE_FIREBASE_MESSAGING_SENDER_ID="123456789012"
VITE_FIREBASE_APP_ID="1:123456789012:web:abcdef123456"
